{
  "name": "demo-project",
  "version": "1.0.0",
  "description": "Demo project for CI/CD Assignment with Jest and coverage",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --coverageReporters=json-summary"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["json", "text", "lcov", "json-summary"]
  }
}
