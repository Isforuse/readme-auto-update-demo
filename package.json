{
  "name": "demo-project",
  "version": "1.0.0",
  "description": "Demo project for CI/CD Assignment with Jest and coverage",
  "main": "test.js",
  "scripts": {
    "test": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["json", "text", "lcov"],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./reports/junit",
          "outputName": "junit.xml"
        }
      ]
    ]
  }
}
